<script>

  $(function(){ // First: Add with default messages
  //$("#frm-add-data").validate(); // Second: Change default messages
  $("#login-form").validate({ rules: { // to define rules name: "required",
  pass: { required: true, minlength: 3 }, newpassword: { required: true,
  minlength: 3 }, email: { required: true, email: true } }, messages:{ // to
  define custom messages name: "Enter your name", pass: { required: "Enter
  password", minlength: "Enter minimum 3 digits" }, newpassword: { required:
  "confirm password", minlength: "Enter minimum 3 digits" }, email: {
  required:'enter Email', email: "The email should be in the format:
  abc@domain.tld" } }, submitHandler: function(form) { if ($(form).valid())
  form.submit(); return false; // prevent normal form posting } }); });
</script>
<div class="maines" style="padding-top: 60px;">

  <section style="padding-top:0px;" class="sign-in">
    <div class="container">
      <div class="signin-content">
        <div class="signin-image text-center">
          <figure><img
              src="images1/signin-image.jpg"
              alt="sing up image"
            /></figure>
          <label for="remember-me" class="label-agree-term"><span><span
              ></span></span>Don't have an account?
            <a style="color: blue;" href="/signup"> Sign up</a>
          </label>
        </div>

        <div class="signin-form">
          <h2 class="form-title">Sign in</h2>
          <form
            action="/login"
            method="POST"
            class="register-form"
            id="login-form"
          >
            <div class="form-group">
              <label for="email"><i class="zmdi zmdi-email"></i></label>
              <input
                type="email"
                name="email"
                id="email"
                placeholder="Your Email"
              />
            </div>
            <div class="form-group">
              <label for="your_pass"><i class="zmdi zmdi-lock"></i></label>
              <input
                type="password"
                name="pass"
                id="your_pass"
                placeholder="Password"
              />
            </div>
            {{#if loginErr}}
              <div class="form-group">
                <label for="remember-me" class="label-agree-term"><span><span
                    ></span></span>Invalid username or password</label>
              </div>
            {{/if}}
            <div class="form-group">
              <label for="remember-me" class="label-agree-term"><span><span
                  ></span></span>
                <a href="/forgot">forgotten password?</a></label>
            </div>

            <div class="form-group form-button">
              <input
                type="submit"
                name="signin"
                id="signin"
                class="form-submit"
                value="Log in"
              />
            </div>
          </form>
          <div class="social-login">
            <span class="social-label">Or login with</span>
            <ul class="socials">
              <li><a href="#"><i
                    class="display-flex-center zmdi zmdi-facebook"
                  ></i></a></li>
              <li><a href="#"><i
                    class="display-flex-center zmdi zmdi-twitter"
                  ></i></a></li>
              <li><a href="#"><i
                    class="display-flex-center zmdi zmdi-google"
                  ></i></a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>