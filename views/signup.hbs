<script>

  $(function(){ // First: Add with default messages
  //$("#frm-add-data").validate(); // Second: Change default messages
  $("#register-form").validate({ rules: { // to define rules name: "required",
  pass: { required: true, minlength: 3 }, repass: { required: true, minlength: 3
  }, email: { required: true, email: true } }, messages:{ // to define custom
  messages name: "Enter your name", pass: { required: "Enter password",
  minlength: "Enter minimum 3 digits" }, repass: { required: "Confirm password",
  minlength: "Enter minimum 3 digits" }, email: { required:'Enter Email', email:
  "The email should be in the format: abc@domain.tld" } }, submitHandler:
  function(form) { if ($(form).valid()) form.submit(); return false; // prevent
  normal form posting } }); });
</script>
<div class="maine">

  <section style="padding-top: 60px;" class="signup">
    <div class="container">
      <div class="signup-content">
        <div class="signup-form">
          <h2 class="form-title">Sign up</h2>
          <form
            action="/signup"
            method="POST"
            class="register-form"
            id="register-form"
          >
            <div class="form-group">
              <label for="name"><i
                  class="zmdi zmdi-account material-icons-name"
                ></i></label>
              <input
                type="text"
                name="name"
                id="name"
                placeholder="Your Name"
              />
            </div>
            <div class="form-group">
              <label for="email"><i class="zmdi zmdi-email"></i></label>
              <input
                type="email"
                name="email"
                id="email"
                placeholder="Your Email"
              />
            </div>
            <div class="form-group">
              <label for="pass"><i class="zmdi zmdi-lock"></i></label>
              <input
                type="password"
                name="pass"
                id="pass"
                placeholder="Password"
              />
            </div>
            <div class="form-group">
              <label for="re-pass"><i
                  class="zmdi zmdi-lock-outline"
                ></i></label>
              <input
                type="password"
                name="repass"
                id="re_pass"
                placeholder="Repeat your password"
              />
            </div>
            <div class="form-group form-button">
              <input
                type="submit"
                name="signup"
                id="signup"
                class="form-submit"
                value="Register"
              />
            </div>
          </form>
        </div>
        <div class="signup-image">
          <figure><img
              src="images1/signup-image.jpg"
              alt="sing up image"
            /></figure>
          <a href="/login" class="signup-image-link">I am already member</a>
        </div>
      </div>
    </div>
  </section>
</div>